{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "stabilityDays": 7
    }
  ],
  "postUpgradeTasks": {
    "commands": ["npm version minor"],
    "fileFilters": ["package.json", "package-lock.json"],
    "executionMode": "update"
  }
}
