{
  "extends": ["eslint:recommended", "plugin:prettier/recommended", "prettier"],
  "parserOptions": {
    "sourceType": "script"
  },
  "env": {
    "es2020": true, // automatically sets the ecmaVersion parser option to 11
    "node": true,
    "browser": false,
    "amd": true
  },
  "globals": {
    "require": true,
    "process": true
  },
  "rules": {
    "brace-style": ["warn", "1tbs"], // ブロックインデントのスタイリング
    "object-curly-spacing": ["warn", "always"], // { foo: 1 }のスペース
    "space-infix-ops": ["warn", { "int32Hint": false }] // 1 + 1のような演算子のスペース
  }
}
